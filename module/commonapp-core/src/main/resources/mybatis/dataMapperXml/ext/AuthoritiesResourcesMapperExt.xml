<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myorg.commonapp.core.mapper.ext.AuthoritiesResourcesMapperExt" >

    <select id="getResourceByAuthority" parameterType="int" resultType="string">
        SELECT resource_url FROM authorities_resources ar
            JOIN resources r ON
            ar.`resources_id` = r.`id`
        WHERE ar.`authorities_id` = ${authorityId}
    </select>
</mapper>